<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnlockPhones.Page2">
    <ContentPage.Content>
        <StackLayout Margin="10" Padding="10" BackgroundColor="Yellow">
            <Label Text="Select your Manufacturer" TextColor="Red"></Label>
            <Button Text="Samsung Unlocking" TextColor="Blue" BackgroundColor="White"
                     Clicked="Button_Clicked"></Button>
            <Button Text="Iphone Unlocking" TextColor="Blue" BackgroundColor="White"
                     Clicked="Button_Clicked_1"></Button>
            <Button Text="HTC Unlocking" TextColor="Blue" BackgroundColor="White"
                     Clicked="Button_Clicked_2"></Button>
            <Button Text="Huawei Unlocking" TextColor="Blue" BackgroundColor="White"
                     Clicked="Button_Clicked_3"></Button>
            <Button Text="Alcatel Unlocking" TextColor="Blue" BackgroundColor="White"
                     Clicked="Button_Clicked_4"></Button>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>