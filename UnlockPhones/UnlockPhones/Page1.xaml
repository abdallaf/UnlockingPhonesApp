<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnlockPhones.Page1"
             BackgroundColor="Aqua">
          <!--Home page .... Unlocking Irish mobile phones-->
    <ScrollView HorizontalOptions="Center" VerticalOptions="Center">
        <StackLayout  Margin="10" Padding="0" HorizontalOptions="Center" VerticalOptions="Center">
            <Button Text="UNLOCK PHONES" BackgroundColor="Red" TextColor="White" VerticalOptions="Center"></Button>
            <Label Text="WELCOME TO ABDALLA PHONES UNLOCKING APP"
           HorizontalOptions="Center"
           VerticalOptions="Center" TextColor="Blue" />
            <Label Text="Unlock your Irish mobile phone and make it Sim free" 
                    VerticalOptions="Center" HorizontalOptions="Center"></Label>
            <Label Text="By unlocking your phone you can use it with any network provider worldwide" 
                    VerticalOptions="Center" HorizontalOptions="Center"></Label>
            <Image Source="Images/unlock.jpg"/>
            <Button Text="GET STARTED" Clicked="Button_Clicked" BackgroundColor="Green"></Button>
        </StackLayout>
    </ScrollView>

    
</ContentPage>